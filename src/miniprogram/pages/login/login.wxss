/* pages/login/login.wxss */

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.usericon {
  display: flex;
  margin-top: 300rpx;
  height: 140rpx;
  width: 100%;
  border-left: none;
  border-right: none;
  justify-content: center;
  align-items: center;
  transition: all 300ms ease;
}
.usericon-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo {
  margin-top: 120rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  height: auto;
  padding: 0 0 0 40rpx;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
}
.userinfo-text, .tunnel-text {
  width: 100%;
  line-height: 45px;
  font-size: 34rpx;
  color: #222;
}
